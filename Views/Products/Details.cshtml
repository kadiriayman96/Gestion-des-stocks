@model InventoryManagement.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Product Details</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Product Information</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Name:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
                        <dt class="col-sm-4">Category:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Category)</dd>
                        <dt class="col-sm-4">Color:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Color)</dd>
                        <dt class="col-sm-4">Unit Price:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.UnitPrice)</dd>
                        <dt class="col-sm-4">Available Quantity:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.AvailableQuantity)</dd>
                    </dl>
                    <div class="text-center">
                        <a asp-action="Edit" asp-route-id="@Model?.ProductId" class="btn btn-primary">Edit</a>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
