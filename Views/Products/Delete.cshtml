@model InventoryManagement.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Product</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h3>Are you sure you want to delete this?</h3>
            <div class="card">
                <div class="card-body">
                    <h4>Product Details</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Name:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
                        <dt class="col-sm-4">Category:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Category)</dd>
                        <dt class="col-sm-4">Color:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Color)</dd>
                        <dt class="col-sm-4">Unit Price:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.UnitPrice)</dd>
                        <dt class="col-sm-4">Available Quantity:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.AvailableQuantity)</dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ProductId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
